@model IEnumerable<BookingHotels.Web.Models.RoomViewModel>
@{
    ViewBag.Title = "Rooms";
}
<br>
<div class="row">
    <div class="col-sm-9">
        <h2>@ViewBag.Title</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Hotel.HotelName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomType)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                string hotelName = item.Hotel.HotelName;
                <tr>
                    <td>
                        @Html.ActionLink(
                linkText: hotelName,
                actionName: "Details",
                controllerName: "Hotel",
                routeValues: new
                {
                    id = item.HotelId,
                },
                htmlAttributes: null
                )
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomPrice) $
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomType)
                    </td>
                    <td>
                        |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @* Admin actions:*@
                        @{
                            if (User.IsInRole("admin"))
                            {
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }); @:|
                            }
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-sm-3">
        <h2>Filters</h2>

    </div>
</div>


