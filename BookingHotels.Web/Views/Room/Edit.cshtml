@{
    ViewBag.Title = "Get image from web api";

    string imgSrc = ViewBag.imgSrc;
}



<h2>Response from Web Api:</h2>
@ViewBag.response
<h2>Response Content from Web Api:</h2>
@ViewBag.responseContent
<h2>Response Content to Image:</h2>

<img src="@imgSrc" width="100" height="100" />
